<settings>
	<!-- Credentials -->
	<category label="30000">
		<setting id="username" type="text" label="30001" default="" />
		<setting id="password" type="text" option="hidden" label="30002"
			default="" />
	</category>
	
	<!-- Options -->
	<category label="30010">
		<setting id="streamtype" label="30011" type="labelenum"
			values="flac|mp3" default="flac" />
		<setting id="pagination_limit" type="labelenum" label="30012"
			default="100" values="6|12|25|50|100|500|1000|5000|10000" />
		<setting type="sep" />
		<setting id="cache_duration_long" type="labelenum" label="30021"
			default="1440" values="0|30|60|120|1440|10080|40320" />
		<setting id="cache_duration_middle" type="labelenum" label="30022"
			default="770" values="0|5|10|30|60|770|1440|10080" />
		<setting type="sep"/>
		<setting id="notification_playingsong" label="30031" type="bool"
			default="false" />
		<setting id="image_default_size" type="labelenum" 
		    label="30041"
            default="large" values="thumbnail|small|large|" />

	</category>
	
	<!-- Other -->
	<category label="30050">
		<!-- <setting id="show_recommendations" label="38004" type="bool" default="true" 
			/> -->
		<setting id="enable_scan_feature" label="38005" type="bool" default="false" />
		<!-- <setting id="resolver_enabled" label="33000" type="bool" default="true" 
			/> -->
		<setting id="debug" label="Debug" type="bool" default="false" />
		<setting id="contextmenu_replaceitems" label="Only qobuz context menu" type="bool" default="false" />
<!-- 		<setting id="userplaylists_display_cover" label="(i8n) Playlist - show cover"
			type="bool" default="true" /> -->
		<setting id="show_recommendations" type="bool" default="true" label="42200" option="" />
		<setting id="search_enabled" label="35000" type="bool" default="true" />
	    <setting id="item_default_color" label="33102" type="text" default="FFDB7656" />
	    <setting id="item_section_color" label="33104" type="text" default="FF56BBDB" />
	    <setting id="item_section_format" label="33105" type="text" default=".o[ %s ]o." />
	    <setting id="item_caution_color" label="33103" type="text"
            default="FFDBB956" />
	</category>
	<setting id="warn_free_account" type="bool" default="true"
		option="hidden" />

</settings>
